{
  "name": "node-typescript-boilerplate",
  "version": "1.0.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "type": "module",
  "main": "build/src/main.js",
  "author": "Raja Rakotonirina <raja.rakoto7@gmail.com>",
  "repository": "https://github.com/RajaRakoto/node-typescript-boilerplate",
  "keywords": [
    "typescript",
    "nodejs",
    "minimalist",
    "boilerplate",
    "template"
  ],
  "engines": {
    "node": ">= 20",
    "pnpm": ">= 8"
  },
  "volta": {
    "node": "21.5.0"
  },
  "scripts": {
    "start": "node build/src/main.js",
    "clean": "rimraf build coverage",
    "dev:tsc:watch": "./node_modules/.bin/tsc-watch --onSuccess \"node tests/esbuild.test.js\"",
    "dev:nodemon:watch": "nodemon tests/bundle.min.test.cjs --no-stdin",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:bundle": "node esbuild.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "eslint": "eslint . --ext .ts --ext .mts",
    "prettier": "prettier --config .prettierrc --write .",
    "backup": "grunt backup",
    "pkg-check": "npm-check",
    "pkg-upgrade": "npm-check -u",
    "versioning": "ungit"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "tslib": "~2.6"
  },
  "devDependencies": {
    "@types/jest": "~29.5",
    "@types/node": "~20.11.0",
    "@typescript-eslint/eslint-plugin": "~6.18.1",
    "@typescript-eslint/parser": "~6.18.1",
    "esbuild": "^0.19.11",
    "eslint": "~8.56",
    "eslint-config-prettier": "~9.1",
    "eslint-plugin-jest": "~27.6",
    "grunt": "^1.6.1",
    "grunt-contrib-compress": "^2.0.0",
    "jest": "~29.7",
    "load-grunt-tasks": "^5.1.0",
    "nodemon": "^3.0.2",
    "npm-check": "^6.0.1",
    "prettier": "~3.1",
    "rimraf": "~5.0",
    "ts-api-utils": "~1.0",
    "ts-jest": "~29.1",
    "tsc-watch": "^6.0.4",
    "typescript": "~5.3"
  }
}
